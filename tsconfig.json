{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/shaders/*": [
        "./src/shaders/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@lib/logger": [
        "./src/lib/logger.server.ts"
      ]
    },
    "types": [
      "@webgpu/types",
      "@types/three",
      "@types/web",
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "tailwind.config.ts",
    "app/**/*.{ts,tsx}",
    "src/**/*.{ts,tsx}",
    "tests/**/*.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "cypress",
    "server",
    "public"
  ]
}
